{
  "name": "@djeka07/nestjs-loki-logger",
  "version": "1.0.7",
  "description": "A logger that logs to Grafana Loki.",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsc -w",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "prepare": "yarn build",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djeka07/nestjs-loki-logger.git"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "LICENSE",
    "*.md"
  ],
  "keywords": [
    "grafana",
    "loki",
    "logging"
  ],
  "author": "Andre Ekbom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/djeka07/nestjs-loki-logger/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/djeka07/nestjs-loki-logger#readme",
  "peerDependencies": {
    "@nestjs/common": "10.3.7"
  },
  "dependencies": {
    "@nestjs/common": "10.3.7",
    "winston": "3.13.0",
    "winston-loki": "6.0.8"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.5.0",
    "@nestjs/core": "10.3.7",
    "@nestjs/testing": "10.3.7",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jest": "29.7.0",
    "node-mocks-http": "^1.14.1",
    "prettier": "3.2.5",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "typescript": "5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "loki-request-logger-interceptor.provider.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
